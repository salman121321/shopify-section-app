{% schema %}
{
  "name": "Collection Grid",
  "target": "section",
  "class": "section-collection-grid",
  "settings": [
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 12
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Heading",
      "default": "Shop By Category"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Columns",
      "default": 4
    }
  ]
}
{% endschema %}

<div class="collection-grid-section" style="
  padding-top: 60px;
  padding-bottom: 60px;
  background-color: #ffffff;
">
  <div class="page-width" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
    {%- if section.settings.main_heading != blank -%}
      <div class="section-header text-center" style="text-align: center; margin-bottom: 40px;">
        <h2 class="title" style="
          font-size: 32px;
          color: #333333;
          margin: 0;
        ">{{ section.settings.main_heading }}</h2>
      </div>
    {%- endif -%}

    <div class="grid-container" style="
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 20px;
    ">
      {%- comment -%} Determine source: Quick Collection List {%- endcomment -%}
      {%- for collection in section.settings.collection_list -%}
         <div class="grid-item">
            <a href="{{ collection.url }}" class="collection-card">
               <div class="image-wrapper" style="position: relative; overflow: hidden; border-radius: 8px;">
                  {%- if collection.featured_image != blank -%}
                     <img src="{{ collection.featured_image | image_url: width: 600 }}" alt="{{ collection.title }}" width="600" height="600" loading="lazy" style="width: 100%; height: auto; display: block;">
                  {%- else -%}
                     {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
               </div>
               <div class="content" style="margin-top: 10px; text-align: center;">
                  <h3 style="margin: 0; font-size: 16px; font-weight: 600; color: #333;">{{ collection.title }}</h3>
               </div>
            </a>
         </div>
      {%- else -%}
         {%- comment -%} Empty State {%- endcomment -%}
         {%- for i in (1..4) -%}
           <div class="grid-item">
              <div class="image-wrapper" style="background: #f4f4f4; border-radius: 8px; overflow: hidden;">
                 {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="content" style="margin-top: 10px; text-align: center;">
                 <h3 style="margin: 0; font-size: 16px; font-weight: 600; color: #333;">Example Item {{ i }}</h3>
              </div>
           </div>
         {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  @media screen and (max-width: 1024px) {
    .grid-container {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }
  @media screen and (max-width: 767px) {
    .grid-container {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
</style>